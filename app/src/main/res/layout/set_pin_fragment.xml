<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="97dp"
        android:layout_height="86dp"
        android:layout_marginTop="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_ibudget" />

    <EditText
        android:id="@+id/pin_edit"
        android:layout_width="0dp"
        android:layout_height="89dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="68dp"
        android:backgroundTint="#385723"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="190dp"
        android:background="@drawable/img_button_pin"
        android:text="1"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pin_edit"
        app:layout_constraintStart_toStartOf="@+id/pin_edit"
        app:layout_constraintTop_toBottomOf="@+id/pin_edit" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button5"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/img_button_pin"
        android:elevation="100dp"
        android:text="5"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pin_button4"
        app:layout_constraintStart_toEndOf="@+id/pin_button4"
        app:layout_constraintTop_toTopOf="@+id/pin_button4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/img_button_pin"
        android:text="2"

        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pin_button1"
        app:layout_constraintStart_toEndOf="@+id/pin_button1"
        app:layout_constraintTop_toTopOf="@+id/pin_button1"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button6"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/img_button_pin"
        android:text="6"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pin_button5"
        app:layout_constraintStart_toEndOf="@+id/pin_button5"
        app:layout_constraintTop_toTopOf="@+id/pin_button5" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_clear"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_backspace"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pin_button9"
        app:layout_constraintStart_toStartOf="@+id/pin_button9"
        app:layout_constraintTop_toBottomOf="@+id/pin_button9" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_enter"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="35dp"
        android:background="@drawable/ic_check"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pin_button7"
        app:layout_constraintStart_toStartOf="@+id/pin_button7"
        app:layout_constraintTop_toBottomOf="@+id/pin_button7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/img_button_pin"
        android:text="4"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pin_button1"
        app:layout_constraintTop_toBottomOf="@+id/pin_button1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button9"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/img_button_pin"
        android:text="9"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pin_button8"
        app:layout_constraintStart_toEndOf="@+id/pin_button8"
        app:layout_constraintTop_toTopOf="@+id/pin_button8" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button8"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/img_button_pin"
        android:text="8"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pin_button7"
        app:layout_constraintStart_toEndOf="@+id/pin_button7"
        app:layout_constraintTop_toTopOf="@+id/pin_button7" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button7"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/img_button_pin"
        android:text="7"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/pin_button4"
        app:layout_constraintTop_toBottomOf="@+id/pin_button4" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="15dp"
        android:background="@drawable/img_button_pin"
        android:text="3"

        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/pin_button2"
        app:layout_constraintTop_toTopOf="@+id/pin_button2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/pin_button0"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/img_button_pin"
        android:text="0"

        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/pin_button8"
        app:layout_constraintStart_toStartOf="@+id/pin_button8"
        app:layout_constraintTop_toBottomOf="@+id/pin_button8" />
</androidx.constraintlayout.widget.ConstraintLayout>